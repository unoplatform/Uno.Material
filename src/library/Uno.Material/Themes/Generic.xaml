<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:controls="using:Uno.Material.Controls"
					xmlns:material="using:Uno.Material">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary>

			<!-- Card -->
			<Style TargetType="controls:Card"
				   BasedOn="{StaticResource MaterialOutlinedCardStyle}" />

			<!-- ExpandingBottomSheet -->
			<Style TargetType="controls:ExpandingBottomSheet"
				   BasedOn="{StaticResource MaterialExpandingBottomSheetStyle}" />

			<!-- ModalBottomSheet -->
			<Style TargetType="controls:ModalBottomSheet"
				   BasedOn="{StaticResource MaterialModalBottomSheetStyle}" />
      
			<!-- ModalStandardBottomSheet -->
			<Style TargetType="controls:ModalStandardBottomSheet"
				   BasedOn="{StaticResource MaterialModalStandardBottomSheetStyle}" />

			<!-- SnackBar -->
			<Style TargetType="controls:SnackBar"
				   BasedOn="{StaticResource MaterialSnackBarStyle}" />

			<!-- StandardBottomSheet -->
			<Style TargetType="controls:StandardBottomSheet"
				   BasedOn="{StaticResource MaterialStandardBottomSheetStyle}" />
		</ResourceDictionary>
	</ResourceDictionary.MergedDictionaries>
</ResourceDictionary>

